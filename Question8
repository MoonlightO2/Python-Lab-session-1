# Question 8
print("\nQuestion 8. Print a list of ASCII codes in a string")


def asciicodes(name):
    for char in name:
        print(char, ":", ord(char))

print("ASCII value of the word 'Sri Lanka'")
asciicodes("Sri Lanka")
print("\nFind ASCII value of your name")
